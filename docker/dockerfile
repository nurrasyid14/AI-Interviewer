# Use official Python base image
FROM python:3.11-slim

# ---------------------------------------------------------
# 1️⃣ System-level dependencies
# ---------------------------------------------------------
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    git \
    wget \
    libglib2.0-0 \
    libgl1-mesa-glx \
    && rm -rf /var/lib/apt/lists/*

# ---------------------------------------------------------
# 2️⃣ Set working directory
# ---------------------------------------------------------
WORKDIR /app

# ---------------------------------------------------------
# 3️⃣ Copy requirements first for caching
# ---------------------------------------------------------
COPY ./requirements.txt .

# ---------------------------------------------------------
# 4️⃣ Install Python dependencies
# ---------------------------------------------------------
RUN pip install --no-cache-dir -r requirements.txt

# ---------------------------------------------------------
# 5️⃣ NLTK & Sastrawi data setup
# ---------------------------------------------------------
RUN python -m nltk.downloader punkt averaged_perceptron_tagger stopwords wordnet omw-1.4

# ---------------------------------------------------------
# 6️⃣ Copy entire application
# ---------------------------------------------------------
COPY . .

# ---------------------------------------------------------
# 7️⃣ Set Streamlit environment variables
# ---------------------------------------------------------
ENV STREAMLIT_SERVER_PORT=8501 \
    STREAMLIT_SERVER_HEADLESS=true \
    STREAMLIT_BROWSER_GATHER_USAGE_STATS=false \
    PYTHONUNBUFFERED=1

# ---------------------------------------------------------
# 8️⃣ Expose port & entrypoint
# ---------------------------------------------------------
EXPOSE 8501

# Run Streamlit app
ENTRYPOINT ["streamlit", "run", "app/main.py"]
